generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/**
 * AUTH (Auth.js / NextAuth) tables
 * + Our custom app models (role, auditions, events, etc.)
 */

enum Role {
  USER
  ADMIN
}

enum AuditionCategory {
  SINGER
  INSTRUMENTALIST
  PRODUCTION
}

enum VoicePart {
  SOPRANO
  ALTO
  TENOR
  BASS
}

enum ApplicationStatus {
  PENDING
  SHORTLISTED
  ACCEPTED
  REJECTED
}

enum AttendanceStatus {
  PRESENT
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // For Credentials login (email/password)
  passwordHash  String?

  role          Role      @default(USER)
  isChorister   Boolean   @default(false)
  choristerVerified Boolean @default(false)
  adminNote     String?
  onboardingComplete Boolean @default(false)

  accounts      Account[]
  sessions      Session[]
  auditions     AuditionApplication[]
  choristerProfile ChoristerProfile?
  choristerAttendances AttendanceRecord[]
  profile       UserProfile?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  codeHash  String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([email])
}

/**
 * AUDITIONS
 */
model AuditionApplication {
  id               String            @id @default(cuid())
  userId           String?

  fullName         String
  phone            String
  email            String
  city             String?
  category         AuditionCategory

  // For SINGERS
  voicePart        VoicePart?
  singingExperience String?
  auditionSong     String?

  // For INSTRUMENTALISTS
  instrument       String?
  instrumentLevel  String? // beginner/intermediate/advanced
  canSightRead     Boolean?

  // For PRODUCTION
  productionRole   String? // producer, content, media, graphics, etc.
  portfolioLink    String?

  notes            String?
  status           ApplicationStatus @default(PENDING)

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  user             User?             @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([userId])
  @@index([status])
  @@index([category])
}

/**
 * OPTIONAL: EVENTS + ANNOUNCEMENTS (nice for the website)
 */
model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String?
  startsAt    DateTime
  endsAt      DateTime?
  isPublished Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  body        String
  isPublished Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GalleryItem {
  id        String   @id @default(cuid())
  title     String?
  imageUrl  String
  publicId  String   @unique
  createdAt DateTime @default(now())
}

model MusicItem {
  id        String   @id @default(cuid())
  title     String?
  audioUrl  String
  publicId  String   @unique
  createdAt DateTime @default(now())
}

model VideoItem {
  id        String   @id @default(cuid())
  title     String?
  videoUrl  String
  posterUrl String?
  publicId  String   @unique
  createdAt DateTime @default(now())
}

model ChoristerProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  phone           String?
  address         String?
  voicePart       String?
  dateOfBirth     DateTime?
  emergencyContact String?
  stateOfOrigin   String?
  currentParish   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserProfile {
  id            String   @id @default(cuid())
  userId        String   @unique
  phone         String?
  address       String?
  stateOfOrigin String?
  currentParish String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ChoristerNotice {
  id          String   @id @default(cuid())
  title       String
  body        String
  attachmentUrl String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Rehearsal {
  id        String   @id @default(cuid())
  title     String
  startsAt  DateTime
  createdAt DateTime @default(now())

  attendance AttendanceRecord[]
}

model AttendanceRecord {
  id           String           @id @default(cuid())
  rehearsalId  String
  userId       String
  status       AttendanceStatus @default(PRESENT)
  markedAt     DateTime         @default(now())
  confirmedAt  DateTime?
  confirmedBy  String?

  rehearsal Rehearsal @relation(fields: [rehearsalId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([rehearsalId, userId])
  @@index([userId])
  @@index([rehearsalId])
}
